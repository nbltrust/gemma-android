<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/view_resource_manage"
    style="@style/common_horizontal_padding"
    android:layout_width="match_parent"
    android:layout_height="76dp">

    <ImageView
        android:id="@+id/iv_token_logo"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:src="@drawable/eth_ic_asset"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_token_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:text="ETH"
        android:textColor="@color/black_title"
        android:textSize="@dimen/font_4"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_token_logo"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_token_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1.2000"
            android:textAlignment="viewEnd"
            android:textColor="@color/black_title"
            android:textSize="@dimen/font_4"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_token_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â‰ˆ ----"
            android:textColor="@color/black_context"
            android:textSize="@dimen/font_3.5"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/tv_token_amount" />

    </LinearLayout>

    <View
        style="@style/common_divider"
        android:layout_marginLeft="38.7dp"
        app:layout_constraintBottom_toBottomOf="parent" />
</android.support.constraint.ConstraintLayout>

