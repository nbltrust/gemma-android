<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:title="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/shape_corner_dialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:src="@drawable/ic_format"
        android:id="@+id/iv_password_hint"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="28dp"/>

    <TextView
        android:id="@+id/tv_format_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/eos_confirm_format"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:textSize="@dimen/font_4"
        android:layout_marginTop="6dp"/>

    <TextView
        android:id="@+id/tv_tip_format"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/eos_tip_format"
        android:layout_gravity="center"
        android:textSize="@dimen/font_4"
        android:textColor="@color/blueyGrey"
        android:layout_marginTop="@dimen/dimen_10"
        android:layout_marginStart="@dimen/dimen_66"
        android:layout_marginEnd="@dimen/dimen_66"
        />


    <View
        style="@style/common_divider"
        android:layout_marginTop="@dimen/dimen_20">

    </View>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/eos_cancel_cn"
            android:gravity="center"
            android:textSize="17sp"
            android:layout_weight="1"
            android:textColor="@color/cornflowerBlue"
            android:background="@drawable/shape_corner_left_bot"
            />

        <TextView
            android:id="@+id/tv_ok"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/eos_confirm"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="17sp"
            android:textColor="@color/cornflowerBlue"
            android:background="@drawable/shape_corner_right_bot"
            />

    </LinearLayout>


</LinearLayout>