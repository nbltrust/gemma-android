<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/shape_corner_dialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:src="@drawable/ic_password_hint"
        android:id="@+id/iv_password_hint"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="28dp"/>

    <TextView
        android:id="@+id/tv_password_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/baseservice_dialog_password_tip_title"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:textSize="@dimen/font_4"
        android:layout_marginTop="3dp"/>

    <TextView
        android:id="@+id/tv_password_hint_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:ellipsize="end"
        android:singleLine="true"
        android:textAlignment="center"
        android:textSize="@dimen/font_3.5"
        android:textColor="@color/black_context"
        tools:text="sdlfalsdjflasdjkfsdfsfasdfasdfasdfasfdfasdfas"
        android:layout_marginTop="12dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"/>

    <View
        android:layout_marginTop="16dp"
        style="@style/common_divider">
    </View>

    <TextView
        android:id="@+id/tv_i_understand"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/baseservice_tip_i_understand"
        android:gravity="center"
        android:textSize="@dimen/font_4"
        android:textColor="@color/black_content"
        android:background="@drawable/shape_corner_bot_dialog"
        />

</LinearLayout>