<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/shape_dialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_no_screenshot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/ic_unconnected"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="18dp"/>

    <TextView
        android:id="@+id/tv_no_screenshot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="失去连接"
        android:textColor="@color/black_title"
        android:layout_gravity="center"
        android:textSize="@dimen/font_4"
        android:layout_marginTop="6dp"/>

    <me.codeboy.android.aligntextview.AlignTextView
        android:id="@+id/tv_no_screenshot_hint"
        android:layout_width="210dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_3.5"
        app:align="center"
        android:textColor="@color/black_context"
        android:text="无法连接到WOOKONG Bio,请确保电源足够并且处于开机状态"
        android:layout_marginTop="6dp"
        />

    <View
        android:layout_marginTop="10dp"
        android:background="@color/black_content"
        style="@style/common_divider">
    </View>

    <TextView
        android:id="@+id/tv_understand"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:text="确定"
        android:gravity="center"
        android:textSize="@dimen/font_4"
        android:textColor="@color/black_content"
        android:background="@drawable/shape_corner_bot_dialog"
        />

</LinearLayout>