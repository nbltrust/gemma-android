<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="toolbar">
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="cardview_common">
        <item name="android:layout_marginTop">@dimen/x8</item>
        <item name="android:layout_marginBottom">@dimen/x8</item>

    </style>

    <style name="editText_general">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/y40</item>
        <item name="android:layout_marginTop">@dimen/y5</item>
        <item name="android:layout_marginStart">@dimen/x8</item>
        <item name="android:layout_marginEnd">@dimen/x8</item>
    </style>

    <style name="textView_general">
        <item name="android:layout_width">@dimen/x160</item>
        <item name="android:layout_height">@dimen/y28</item>
        <item name="android:layout_marginStart">@dimen/x8</item>
        <item name="android:layout_marginTop">@dimen/y5</item>
    </style>

</resources>
