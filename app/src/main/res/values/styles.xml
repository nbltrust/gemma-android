<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>


    <style name="cardview_common">
        <item name="android:layout_marginTop">@dimen/x8</item>
        <item name="android:layout_marginBottom">@dimen/x8</item>
    </style>

    <!-- checkbox样式 -->
    <style name="myCheckBox" parent="@android:style/Widget.Material.CompoundButton.CheckBox">
        <item name="android:colorControlActivated">@color/cornflowerBlue</item>
        <item name="android:colorControlNormal">@color/colorPrimary</item>
    </style>

    <!--Create Wallet 页面 -->
    <!-- 创建钱包Button样式 -->
    <style name="button_create_wallet">
        <item name="android:layout_width">@dimen/x292</item>
        <item name="android:layout_height">@dimen/x32</item>
        <item name="android:background">#cacddf</item>
        <item name="android:textSize">@dimen/x12</item>
        <item name="android:textColor">@color/whiteTwo</item>
    </style>

    <style name="button_create_wallet_clickable">
        <item name="android:layout_width">@dimen/x292</item>
        <item name="android:layout_height">@dimen/x32</item>
        <item name="android:background">#426bd4</item>
    </style>

    <!-- Button 文字样式 -->
    <style name="text_create_wallet">
        <item name="android:layout_marginTop">@dimen/x12</item>
        <item name="android:layout_marginBottom">@dimen/x12</item>
        <item name="android:textSize">@dimen/x12</item>
    </style>
    <!-- 输入区域整体样式 -->
    <style name="layout_input_area">
        <item name="android:layout_width">@dimen/x292</item>
        <item name="android:layout_height">@dimen/x256</item>
        <item name="android:layout_marginStart">@dimen/x13</item>
        <item name="android:layout_marginEnd">@dimen/x13</item>
        <item name="android:layout_marginTop">@dimen/x13</item>
    </style>
    <!-- 单一输入区域样式 -->
    <style name="layout_single_input_area">
        <item name="android:layout_width">@dimen/x265</item>
        <item name="android:layout_height">@dimen/x62</item>
        <item name="android:layout_marginStart">@dimen/x13</item>
        <item name="android:layout_marginEnd">@dimen/x13</item>
    </style>


    <style name="editText_general">
        <item name="android:layout_width">@dimen/x265</item>
        <item name="android:layout_height">@dimen/x36</item>
        <item name="android:layout_marginTop">@dimen/x6</item>
        <item name="android:textSize">@dimen/x12</item>
        <item name="android:textColor">@color/darkSlateBlue</item>
        <item name="android:theme">@style/editText_sub</item>
    </style>

    <style name="editText_sub">
        <item name="android:colorControlNormal">@color/paleGreyTwo</item>
        <item name="android:colorControlActivated">@color/darkSlateBlue</item>
    </style>

    <style name="textView_general">
        <item name="android:layout_width">@dimen/x41</item>
        <item name="android:layout_height">@dimen/x14</item>
        <item name="android:layout_marginTop">@dimen/x12</item>
        <item name="android:textSize">@dimen/x10</item>
        <item name="android:textColor">@color/steel</item>
    </style>

    <!-- Create Wallet Success页面样式-->
    <!-- 消息显示区域 -->
    <style name="show_area">
        <item name="android:layout_marginStart">@dimen/x14</item>
        <item name="android:layout_marginEnd">@dimen/x14</item>
        <item name="android:layout_marginTop">@dimen/x41</item>
        <item name="android:layout_height">@dimen/x159</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:background">@drawable/shape_corner</item>
    </style>

    <!-- 文本显示区域 -->

    <style name="textView_in_create_success">
        <item name="android:layout_marginStart">@dimen/x14</item>
        <item name="android:layout_marginEnd">@dimen/x14</item>
        <item name="android:layout_marginTop">@dimen/x23</item>
        <item name="android:layout_height">@dimen/x70</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textSize">@dimen/x14</item>

    </style>

    <!-- 按钮 -->
    <style name="button_in_create_success">
        <item name="android:layout_width">@dimen/x126</item>
        <item name="android:layout_height">@dimen/x36</item>
        <item name="android:layout_marginTop">@dimen/x32</item>
        <item name="android:textSize">@dimen/x14</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginStart">@dimen/x14</item>
        <item name="android:layout_marginBottom">@dimen/x17</item>
    </style>

    <!-- BackUp Warning 页面样式-->
    <!-- 文本显示区域 -->
    <style name="show_area_in_backUpWarning">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/x127</item>
        <item name="android:layout_marginStart">@dimen/x32</item>
        <item name="android:layout_marginEnd">@dimen/x32</item>
        <item name="android:layout_marginTop">@dimen/x59</item>
        <item name="android:background">@drawable/shape_corner_buff</item>
    </style>

    <!-- 文本显示区域 LinearLayout-->
    <style name="show_area_in_backUpWarning2">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginStart">@dimen/x40</item>
        <item name="android:layout_marginEnd">@dimen/x16</item>
        <item name="android:layout_marginTop">@dimen/x16</item>
        <item name="android:layout_marginBottom">@dimen/x16</item>

    </style>

    <!-- 单一文本框 -->
    <style name="singleTextView_in_BackUpWarning">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/x21</item>
        <item name="android:textSize">@dimen/x10</item>
        <item name="android:layout_marginEnd">@dimen/x16</item>

    </style>

    <!-- 按钮 -->
    <style name="button_in_backUpWarning">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/x44</item>
        <item name="android:textSize">@dimen/x14</item>
        <item name="android:textColor">@color/whiteTwo</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@color/cornflowerBlueTwo</item>
    </style>

    <style name="layout_show_mne">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/x160</item>
        <item name="android:layout_marginStart">@dimen/x16</item>
        <item name="android:layout_marginEnd">@dimen/x16</item>
        <item name="android:layout_marginTop">@dimen/x14</item>
    </style>

    <!-- 验证成功弹出框 -->
    <style name="dialogue_succeed">
        <item name="android:layout_width">@dimen/x180</item>
        <item name="android:layout_height">@dimen/x72</item>
        <item name="android:background">@drawable/shape_corner_dialog_succeed</item>
        <item name="android:textColor">@color/whiteTwo</item>
    </style>

    <!-- 密码输入提示气泡框 -->
    <style name="bubble">
        <item name="android:layout_width">@dimen/x292</item>
        <item name="android:layout_height">@dimen/x66</item>

    </style>


    <!-- 字体样式 -->
    <style name="Title_Large">
        <item name="android:textColor">@color/darkSlateBlue</item>
        <item name="android:textSize">@dimen/Title_Large</item>
    </style>

    <style name="Title_Mid">
        <item name="android:textColor">@color/darkSlateBlue</item>
        <item name="android:textSize">@dimen/Title_Mid</item>
    </style>

    <style name="Help_Mid">
        <item name="android:textColor">@color/steel</item>
        <item name="android:textSize">@dimen/Help_Mid</item>
    </style>
    <style name="Hint_Mid">
        <item name="android:textColor">@color/cloudyBlue</item>
        <item name="android:textSize">@dimen/Hint_Mid</item>
    </style>
    <style name="Hint_Small">
        <item name="android:textColor">@color/blueyGrey</item>
        <item name="android:textSize">@dimen/Hint_Small</item>
    </style>
    <style name="Hint_Small_2">
        <item name="android:textColor">@color/darkSlateBlue</item>
        <item name="android:textSize">@dimen/Hint_Small</item>
    </style>



</resources>
