<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>

        <!--
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>

        -->
    </style>

    <style name="SplashScreen" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowAnimationStyle">@style/Fantasy.Animation.Activity.SlidingBack
        </item>

    </style>

    <style name="input_style">
        <item name="android:textStyle">bold</item>
    </style>

    <!-- 公用分割线样式-->
    <style name="view_common_divider">
        <item name="android:layout_marginStart">@dimen/dimen_12</item>
        <item name="android:layout_marginEnd">@dimen/dimen_12</item>
        <item name="android:layerType">software</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_1</item>
        <item name="android:background">@color/paleGrey</item>
    </style>

    <!-- 公用删除icon样式-->
    <style name="clear_icon_common">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/ic_close</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_marginEnd">@dimen/dimen_10</item>
    </style>

    <!-- 公用明文密文icon样式-->
    <style name="mask_icon_common">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/ic_visible</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:visibility">visible</item>
        <item name="android:layout_marginEnd">@dimen/dimen_10</item>
    </style>

    <!-- Radio Button 样式-->
    <style name="mRadioButton">
        <item name="android:layout_marginStart">@dimen/dimen_10</item>
        <item name="android:layout_marginEnd">@dimen/dimen_10</item>
        <item name="android:layout_height">@dimen/card_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/font_3.5</item>
        <item name="android:textColor">@color/darkSlateBlue</item>
        <item name="android:button">@null</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:drawableRight">@drawable/selector_radio_button</item>
    </style>

    <!-- 通用EditText样式 -->
    <style name="myEditText">
        <item name="android:colorControlNormal">@color/paleGrey</item>
        <item name="android:colorControlActivated">@color/darkSlateBlue</item>
    </style>

    <!-- checkbox样式 -->
    <style name="myCheckBox" parent="@android:style/Widget.Material.CompoundButton.CheckBox">
        <item name="android:colorControlActivated">@color/cornflowerBlue</item>
        <item name="android:colorControlNormal">@color/cloudyBlue</item>
    </style>

    <!-- 通用switch样式 -->
    <style name="mySwitch">
        <item name="android:thumb">@drawable/selector_switch_thumb</item>
        <item name="android:track">@drawable/selector_switch_track</item>
    </style>

    <style name="mySwitchButton">
        <item name="android:layout_width">@dimen/dimen_48</item>
        <item name="android:layout_height">@dimen/dimen_26</item>
        <item name="android:layout_marginEnd">@dimen/dimen_10</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    
    <!-- 线性布局中长按钮的样式 -->
    <style name="bt_long_in_linearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/bt_inInitPage_height</item>
        <item name="android:textSize">@dimen/font_3.5</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/shape_corner_button</item>
    </style>
    
    <!-- 约束布局中长按钮的样式 -->
    <style name="bt_create_wallet">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/bt_inInitPage_height</item>
        <item name="android:layout_marginStart">@dimen/bt_inInitPage_margin</item>
        <item name="android:layout_marginEnd">@dimen/bt_inInitPage_margin</item>
    </style>


    <!-- Alert 字体样式 -->

    <style name="myAlert">
        <item name="android:textSize">@dimen/font_3</item>
        <item name="android:textColor">@color/whiteTwo</item>
    </style>

    <!-- 备份私钥页面 -->
    <style name="text_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:textSize">@dimen/font_3.5</item>
        <item name="android:textColor">@color/darkSlateBlue</item>
    </style>

    <style name="text_body">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textSize">@dimen/font_3</item>
        <item name="android:textColor">@color/blueyGrey</item>
    </style>

    <!-- 配置钱包页面 -->
    <style name="text_title_config_wallet">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_20</item>
        <item name="android:layout_marginStart">@dimen/dimen_10</item>
        <item name="android:layout_marginEnd">@dimen/dimen_10</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/font_3</item>
        <item name="android:textColor">@color/steel</item>
        <item name="android:layout_marginTop">@dimen/dimen_6</item>
    </style>
    
    <style name="editText_config_wallet">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_50</item>
        <item name="android:textColor">@color/darkSlateBlue</item>
        <item name="android:textSize">@dimen/font_4</item>
        <item name="android:textColorHint">@color/cloudyBlue</item>
        <item name="android:theme">@style/myEditText</item>
        <item name="android:background">@drawable/selector_edt_bg</item>
        <item name="android:textCursorDrawable">@drawable/cursor_custom</item>
        <item name="android:layout_marginEnd">@dimen/dimen_12</item>
        <item name="android:layout_marginStart">@dimen/dimen_12</item>
        <item name="android:textStyle">normal</item>

    </style>

    <style name="editText_config_wallet_bold">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_50</item>
        <item name="android:textColor">@color/darkSlateBlue</item>
        <item name="android:textSize">@dimen/font_4</item>
        <item name="android:textColorHint">@color/cloudyBlue</item>
        <item name="android:theme">@style/myEditText</item>
        <item name="android:background">@drawable/selector_edt_bg</item>
        <item name="android:textCursorDrawable">@drawable/cursor_custom</item>
        <item name="android:layout_marginEnd">@dimen/dimen_12</item>
        <item name="android:layout_marginStart">@dimen/dimen_12</item>
        <item name="android:textStyle">bold</item>

    </style>

    <!-- 钱包主页面 -->
    <style name="bottom_card">
        <item name="android:layout_marginStart">@dimen/bot_card_margin</item>
        <item name="android:layout_marginEnd">@dimen/bot_card_margin</item>
        <item name="android:layout_height">@dimen/bot_card_height</item>
    </style>

    <style name="show_cpu_status_area">
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginEnd">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/cpu_show_area_height</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/shape_corner_bot_cpublock</item>
    </style>

    <style name="cpu_net_ram">
        <item name="android:layout_width">@dimen/single_cpu_width</item>
        <item name="android:layout_height">@dimen/single_cpu_height</item>
        <item name="android:layout_marginBottom">@dimen/single_cpu_margin</item>
        <item name="android:layout_marginStart">@dimen/single_cpu_margin</item>
        <item name="android:layout_marginTop">@dimen/single_cpu_margin</item>
    </style>

    <style name="textView_cpu_net_ram">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:layout_marginTop">@dimen/dimen_6</item>
        <item name="android:layout_marginStart">@dimen/dimen_20</item>
        <item name="android:layout_marginEnd">@dimen/dimen_20</item>
        <item name="android:textColor">@color/darkSlateBlue</item>
        <item name="android:textSize">@dimen/font_3</item>
    </style>

    <style name="progressBar_cpu_net_ram">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_3</item>
        <item name="android:layout_marginTop">@dimen/dimen_10</item>
        <item name="android:layout_marginStart">@dimen/dimen_20</item>
        <item name="android:layout_marginEnd">@dimen/dimen_20</item>
    </style>

    <!-- 管理钱包页面 -->
    <style name="card_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/card_height</item>
    </style>


    <!--创建钱包页面 -->


    <!-- 输入区域整体样式 -->
    <style name="layout_input_area">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/input_layout_height</item>
        <item name="android:layout_marginStart">@dimen/input_layout_margin</item>
        <item name="android:layout_marginEnd">@dimen/input_layout_margin</item>
        <item name="android:layout_marginTop">@dimen/input_layout_margin</item>
    </style>
    <!-- 单一输入区域样式 -->
    <style name="layout_single_input_area">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/single_input_height</item>
        <item name="android:layout_marginStart">@dimen/single_input_margin</item>
        <item name="android:layout_marginEnd">@dimen/single_input_margin</item>
    </style>


    <style name="editText_general">
        <item name="android:layout_width">@dimen/x265</item>
        <item name="android:layout_height">@dimen/x36</item>
        <item name="android:layout_marginTop">@dimen/x6</item>
        <item name="android:textSize">@dimen/x12</item>
        <item name="android:textColor">@color/darkSlateBlue</item>
        <item name="android:theme">@style/editText_sub</item>
    </style>

    <style name="editText_sub">
        <item name="android:colorControlNormal">@color/paleGreyTwo</item>
        <item name="android:colorControlActivated">@color/darkSlateBlue</item>
    </style>

    <style name="textView_general">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/textView_height</item>
        <item name="android:layout_marginTop">@dimen/textView_marginTop</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/steel</item>
    </style>

    <!-- Create Wallet Success页面样式-->
    <!-- 消息显示区域 -->
    <style name="show_area">
        <item name="android:layout_marginStart">@dimen/x14</item>
        <item name="android:layout_marginEnd">@dimen/x14</item>
        <item name="android:layout_marginTop">@dimen/x41</item>
        <item name="android:layout_height">@dimen/x159</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:background">@drawable/shape_corner</item>
    </style>

    <!-- 文本显示区域 -->

    <style name="textView_in_create_success">
        <item name="android:layout_marginStart">@dimen/x14</item>
        <item name="android:layout_marginEnd">@dimen/x14</item>
        <item name="android:layout_marginTop">@dimen/x23</item>
        <item name="android:layout_height">@dimen/x70</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textSize">@dimen/x14</item>

    </style>

    <!-- 按钮 -->
    <style name="button_in_create_success">
        <item name="android:layout_width">@dimen/x126</item>
        <item name="android:layout_height">@dimen/x36</item>
        <item name="android:layout_marginTop">@dimen/x32</item>
        <item name="android:textSize">@dimen/x14</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginStart">@dimen/x14</item>
        <item name="android:layout_marginBottom">@dimen/x17</item>
    </style>

    <!-- BackUp Warning 页面样式-->

    <!-- 按钮 -->
    <style name="button_in_backUpWarning">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/x44</item>
        <item name="android:textSize">@dimen/x14</item>
        <item name="android:textColor">@color/whiteTwo</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@color/cornflowerBlueTwo</item>
    </style>

    <style name="layout_show_mne">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/x160</item>
        <item name="android:layout_marginStart">@dimen/x16</item>
        <item name="android:layout_marginEnd">@dimen/x16</item>
        <item name="android:layout_marginTop">@dimen/x14</item>
    </style>


    <style name="dialogstyle">
        <!--设置dialog的背景-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--设置Dialog的windowFrame框为无-->
        <item name="android:windowFrame">@null</item>
        <!--设置无标题-->
        <item name="android:windowNoTitle">true</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--是否半透明-->
        <item name="android:windowIsTranslucent">true</item>
        <!--设置窗口内容不覆盖-->
        <item name="android:windowContentOverlay">@null</item>
        <!--设置动画，在这里使用让它继承系统的Animation.Dialog-->
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <!--背景是否模糊显示-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="Theme.ActivityDialogStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/bg_ui</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowIsFloating">true</item>    //dialog会自适应
        <item name="android:windowFullscreen">true</item>

    </style>



</resources>
