<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bg_ui">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="106dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/bg_shape_radius_white">


        <ImageView
            android:id="@+id/imv_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:src="@drawable/icon_arrow_down"/>


        <LinearLayout
            android:id="@+id/view_middle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@id/imv_arrow"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_transfer_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:singleLine="true"
                    android:textColor="@color/darkSlateBlue"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:text="\ufeff@qhy1233456789"
                    />

                <TextView
                    android:id="@+id/tv_transfer_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16dp"
                    android:gravity="end"
                    android:textColor="@color/darkSlateBlue"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:text="+2.1101 "
                    />
            </RelativeLayout>


            <TextView
                android:id="@+id/tv_transfer_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:paddingLeft="2dp"
                android:textColor="@color/darkSlateBlue"
                android:textSize="12sp"
                tools:text="2018/06/24 10:00"
                />

            <TextView
                android:id="@+id/tv_transfer_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:paddingLeft="2dp"
                android:textColor="#426bd4"
                android:textSize="12sp"
                tools:text="转账中"
                />

        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>