<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:title="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        layout="@layout/ui_navibar">
    </include>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        title:layout_constraintStart_toStartOf="parent"
        title:layout_constraintEnd_toEndOf="parent"
        title:layout_constraintTop_toBottomOf="@id/btn_navibar"
        title:layout_constraintBottom_toBottomOf="parent"
        >


        <android.support.constraint.ConstraintLayout
            android:id="@+id/brief_info"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/img_send_bg"
            >

            <ImageView
                android:id="@+id/arrow"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginTop="12dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/ic_income_white"
                title:layout_constraintStart_toStartOf="parent"
                title:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/tv_income_or_out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                android:text="收入"
                android:textSize="18sp"
                android:textColor="@color/whiteTwo"
                title:layout_constraintStart_toEndOf="@+id/arrow"
                title:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/tv_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:text="+2.1101"
                android:textSize="24sp"
                android:textColor="@color/whiteTwo"
                title:layout_constraintBottom_toBottomOf="parent"
                title:layout_constraintStart_toStartOf="@+id/tv_income_or_out"
                title:layout_constraintTop_toBottomOf="@+id/tv_income_or_out"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="@string/eos"
                android:textColor="@color/whiteTwo"
                android:textSize="24sp"
                title:layout_constraintBottom_toBottomOf="parent"
                title:layout_constraintStart_toEndOf="@+id/tv_amount"
                title:layout_constraintTop_toBottomOf="@+id/tv_income_or_out"/>

        </android.support.constraint.ConstraintLayout>

        <LinearLayout
            android:id="@+id/layout_detail_1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="10dp"
            >
            
            <com.allen.library.SuperTextView
                title:sUseShape="true"
                title:sShapeSolidColor="@color/whiteTwo"
                title:sLeftTextColor="@color/steel"
                title:sLeftTextSize="@dimen/total_assets_text_size"
                title:sLeftTextString="@string/receiver"
                title:sRightTextColor="@color/darkSlateBlue"
                title:sRightTextString="dopadopa1234"
                title:sRightTextSize="@dimen/total_assets_text_size"
                android:id="@+id/superTextView_receiver"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                
            </com.allen.library.SuperTextView>

            <com.allen.library.SuperTextView
                title:sUseShape="true"
                title:sShapeSolidColor="@color/whiteTwo"
                title:sLeftTextColor="@color/steel"
                title:sLeftTextSize="@dimen/total_assets_text_size"
                title:sLeftTextString="@string/block_time"
                title:sRightTextColor="@color/darkSlateBlue"
                title:sRightTextString="2018/07/08 10:11"
                title:sRightTextSize="@dimen/total_assets_text_size"
                android:id="@+id/superTextView_blockTime"
                android:layout_width="match_parent"
                android:layout_height="50dp">

            </com.allen.library.SuperTextView>

            <com.allen.library.SuperTextView
                title:sUseShape="true"
                title:sShapeSolidColor="@color/whiteTwo"
                title:sLeftTextColor="@color/steel"
                title:sLeftTextSize="@dimen/total_assets_text_size"
                title:sLeftTextString="@string/transfer_status"
                title:sRightTextColor="@color/darkSlateBlue"
                title:sRightTextString="待确认"
                title:sRightTextSize="@dimen/total_assets_text_size"
                android:id="@+id/superTextView_transfer_status"
                android:layout_width="match_parent"
                android:layout_height="50dp">

            </com.allen.library.SuperTextView>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <TextView
                    android:layout_width="80dp"
                    android:text="@string/memo"
                    android:background="@color/whiteTwo"
                    android:gravity="center_vertical"
                    android:paddingStart="10dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"/>

                <TextView
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:textColor="@color/darkSlateBlue"
                    android:text="资金用途描述不超过三行，资金用途描述不超过三行，资金用途描述不超过三行，资金用途描述不超过三行，资金用途描述不超。"
                    android:id="@+id/tv_memo"
                    android:background="@color/whiteTwo"
                    android:layout_width="100dp"
                    android:layout_weight="11"
                    android:paddingStart="10dp"
                    android:gravity="center_vertical"
                    android:paddingEnd="10dp"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <!--
            <com.allen.library.SuperTextView
                title:sUseShape="true"
                title:sShapeSolidColor="@color/whiteTwo"
                title:sLeftTextColor="@color/steel"
                title:sLeftTextString="@string/memo"
                title:sLeftTextSize="@dimen/total_assets_text_size"
                title:sRightTextColor="@color/darkSlateBlue"
                title:sRightTextString="资金用途描述不超过三行，资金用途描述不超过三行，资金用途描述不超过三行，资金用途描述不超过三行，资金用途描述不超。"
                title:sRightViewMarginLeft="100dp"
                title:sRightTextSize="@dimen/total_assets_text_size"
                android:id="@+id/superTextView_memo"
                android:layout_width="match_parent"
                android:layout_height="100dp">
                
            </com.allen.library.SuperTextView>
        -->
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_detail_2"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            >

           <com.allen.library.SuperTextView
                title:sUseShape="true"
                title:sShapeSolidColor="@color/whiteTwo"
                title:sLeftTextColor="@color/steel"
                title:sLeftTextSize="@dimen/total_assets_text_size"
                title:sLeftTextString="@string/transfer_id"

                title:sRightTextColor="@color/darkSlateBlue"
                title:sRightTextString="0quw12150...1321f25"
                title:sRightTextSize="@dimen/total_assets_text_size"
                android:id="@+id/superTextView_transferId"
                android:layout_width="match_parent"
                android:layout_height="50dp">

            </com.allen.library.SuperTextView>

            <com.allen.library.SuperTextView
                title:sUseShape="true"
                title:sShapeSolidColor="@color/whiteTwo"
                title:sLeftTextColor="@color/steel"
                title:sLeftTextSize="@dimen/total_assets_text_size"
                title:sLeftTextString="@string/block_num"
                title:sRightTextColor="@color/darkSlateBlue"
                title:sRightTextString="5456999"
                title:sRightTextSize="@dimen/total_assets_text_size"
                android:id="@+id/superTextView_blockId"
                android:layout_width="match_parent"
                android:layout_height="50dp">

            </com.allen.library.SuperTextView>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_see_in_explorer"
            android:text="@string/see_in_explorer"
            android:layout_gravity="end"
            android:layout_marginTop="15dp"
            android:textColor="@color/cornflowerBlue"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>



</android.support.constraint.ConstraintLayout>