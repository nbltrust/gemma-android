<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/whiteTwo"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50"
        android:layout_marginStart="@dimen/dimen_20"
        android:layout_marginEnd="@dimen/dimen_20"
        android:layout_marginTop="@dimen/dimen_20"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edt_invCode"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/eos_tip_input_inv_code"
            android:textColorHint="@color/cloudy_blue"
            android:textColor="@color/darkSlateBlue"
            android:paddingStart="@dimen/dimen_20"
            android:paddingTop="@dimen/dimen_5"
            android:paddingBottom="@dimen/dimen_5"
            android:layout_height="@dimen/dimen_50"
            android:textSize="@dimen/font_4"
            android:textCursorDrawable="@drawable/cursor_custom"
            />

        <TextView
            android:layout_marginEnd="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:text="@string/eos_how_to_get_invCode"
            android:textColor="@color/cornflowerBlue"
            android:textSize="@dimen/font_3"/>

    </LinearLayout>

    <View
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        style="@style/common_divider">

    </View>

    <Button
        android:id="@+id/bt_activate"
        android:text="@string/eos_confirm"
        style="@style/bt_long_in_linearLayout"
        android:textSize="@dimen/font_3.5"
        android:layout_marginTop="@dimen/dimen_30"
        android:layout_marginStart="@dimen/dimen_50"
        android:layout_marginEnd="@dimen/dimen_50"/>

</LinearLayout>