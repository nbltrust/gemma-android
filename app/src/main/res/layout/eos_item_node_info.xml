<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:clickable="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/eos_bg_shape_white_selector"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dimen_20"
        android:paddingBottom="20dp"
        android:layout_marginEnd="@dimen/dimen_28"
        android:layout_marginStart="@dimen/dimen_32">

        <LinearLayout
            android:id="@+id/view_is_node_checked"
            android:layout_width="@dimen/dimen_30"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_node_checked"
                android:button="@null"
                android:background="@drawable/ic_radio_button_unselected"
                android:layout_gravity="center"
                android:layout_width="@dimen/dimen_24"
                android:layout_height="@dimen/dimen_24"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/view_node_info"
            android:layout_marginStart="@dimen/dimen_20"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_node_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/black_title"
                    android:textSize="@dimen/font_4"
                    android:textStyle="bold"
                    tools:text="EOS Cannon"/>

                <TextView
                    android:id="@+id/tv_node_percentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_3.5"
                    android:textColor="@color/black_context"
                    tools:text="11.33%"/>

                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_node_ranking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="#4"
                    android:textSize="@dimen/font_3.5"
                    android:textColor="@color/black_context"
                    android:textStyle="bold"
                    android:layout_marginStart="@dimen/dimen_10"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_node_alias"
                android:layout_marginTop="@dimen/dimen_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_context"
                android:textSize="@dimen/font_3.5"
                tools:text="eoscannonchn"
                />

            <TextView
                android:id="@+id/tv_node_url"
                android:layout_marginTop="@dimen/dimen_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_3.5"
                android:textColor="@color/black_context"
                tools:text="IN EOS WE TRUST CANNON"
                />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        style="@style/common_divider">
    </View>

</LinearLayout>
