<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_ui">


    <include layout="@layout/ui_navibar"/>

    <ScrollView
        android:id="@+id/root_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_below="@id/btn_navibar"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_collection_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="15dp"
                android:text="@string/receiver"
                android:textColor="#8e8e93"
                android:textSize="16sp"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_shape_radius_white">

                <TextView
                    android:id="@+id/icon_receiver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:letterSpacing="-0.03"
                    android:text="\ufeff@"
                    android:textStyle="bold"
                    android:textColor="@color/font_dark_state_blue"
                    android:textSize="18sp"/>

                <View
                    android:id="@+id/view_divider"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:layout_toRightOf="@id/icon_receiver"
                    android:background="@color/vertical_line"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_toRightOf="@id/view_divider"
                    android:paddingLeft="18dp"
                    >

                    <EditText
                        android:id="@+id/et_collection_account"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:layout_gravity="center_vertical"
                        android:textStyle="bold"
                        android:hint="@string/account_name"
                        android:textColor="@color/font_dark_state_blue"
                        android:textColorHint="#9ea3bd"
                        android:textSize="16sp"
                        android:textCursorDrawable="@drawable/cursor_custom"
                        android:layout_weight="1"/>

                    <ImageView
                        android:id="@+id/iv_transfer_account_clear"
                        style="@style/clear_icon_common"/>

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_shape_radius_white"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    >

                    <TextView
                        android:id="@+id/tv_title_pay_account"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:text="@string/payingAccount"
                        android:textColor="#8e8e93"
                        android:textSize="16sp"
                        />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/tv_title_pay_account"
                        android:layout_marginTop="14dp">

                        <TextView
                            android:id="@+id/tv_pay_account"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="16dp"
                            android:singleLine="true"
                            android:textStyle="bold"
                            tools:text="账户1"
                            android:textColor="@color/darkSlateBlue"
                            android:textSize="16sp"
                            />

                        <TextView
                            android:id="@+id/tv_banlance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="12dp"
                            android:singleLine="true"
                            android:text="@string/remain_balance_zero"
                            android:textColor="#535c8a"
                            android:textSize="14sp"
                            />

                    </RelativeLayout>


                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:background="@color/horiontal_line"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    >

                    <TextView
                        android:id="@+id/tv_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:text="@string/fund"
                        android:textColor="#8e8e93"
                        android:textSize="16sp"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="14dp"
                        android:layout_below="@id/tv_amount">

                        <EditText
                            android:id="@+id/et_amount"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:hint="@string/transfer_hint"
                            android:textColorHint="#c6cade"
                            android:inputType="numberDecimal"
                            android:singleLine="true"
                            android:textColor="@color/darkSlateBlue"
                            android:textSize="16sp"
                            android:textCursorDrawable="@drawable/cursor_custom"
                            android:layout_weight="1"/>

                        <ImageView
                            android:id="@+id/iv_transfer_amount_clear"
                            style="@style/clear_icon_common"/>

                    </LinearLayout>


                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:background="@color/horiontal_line"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:id="@+id/tv_note"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:text="@string/memo_optional"
                        android:textColor="#8e8e93"
                        android:textSize="16sp"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_below="@id/tv_note"
                        android:layout_marginBottom="18dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp">

                        <com.cybex.gma.client.widget.EditTextWithScrollView
                            android:id="@+id/et_note"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:hint="@string/input_transfer_hint"
                            android:textColorHint="#c6cade"
                            android:maxLines="3"
                            android:minHeight="50dp"
                            android:textColor="@color/darkSlateBlue"
                            android:textSize="16sp"
                            android:layout_weight="1"
                            android:textCursorDrawable="@drawable/cursor_custom"/>

                        <ImageView
                            android:id="@+id/iv_transfer_memo_clear"
                            style="@style/clear_icon_common"/>

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

            <Button
                android:id="@+id/btn_transfer"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="24dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/selector_btn_transfer"
                android:enabled="false"
                android:text="@string/confirmTransfer"
                android:textColor="@color/white"
                android:textSize="16sp"/>

        </LinearLayout>


    </ScrollView>


</RelativeLayout>