<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_delegate_cpu"
        android:layout_width="match_parent"
        android:textSize="@dimen/font_3.5"
        android:textColor="@color/steel"
        android:layout_height="wrap_content"
        android:text="@string/delegate_cpu"
        android:layout_marginTop="@dimen/dimen_10"/>

    <EditText
        android:id="@+id/edt_delegate_cpu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50"
        android:textSize="@dimen/font_4"
        android:inputType="numberDecimal"
        android:hint="@string/delegate_hint"
        android:textColorHint="@color/cloudyBlue"
        style="@style/editText_config_wallet"
        android:textCursorDrawable="@drawable/cursor_custom"/>

    <TextView
        android:id="@+id/tv_delegate_net"
        android:layout_width="match_parent"
        android:textSize="@dimen/font_3.5"
        android:textColor="@color/steel"
        android:layout_height="wrap_content"
        android:text="@string/delegate_net"
        android:layout_marginTop="@dimen/dimen_10"/>

    <EditText
        android:id="@+id/edt_delegate_net"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50"
        android:inputType="numberDecimal"
        android:textSize="@dimen/font_4"
        android:hint="@string/delegate_hint"
        android:textColorHint="@color/cloudyBlue"
        style="@style/editText_config_wallet"
        android:textCursorDrawable="@drawable/cursor_custom"
        android:background="@null"/>

</LinearLayout>