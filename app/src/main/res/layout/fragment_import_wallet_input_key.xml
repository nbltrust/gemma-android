<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
        layout="@layout/ui_navibar">
    </include>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_30"
        android:text="@string/input_key_hint2"
        android:textColor="@color/blueyGrey"
        android:textSize="@dimen/font_3"
        android:layout_marginStart="@dimen/dimen_46"
        android:layout_marginEnd="@dimen/dimen_46"
        android:layout_marginTop="@dimen/dimen_20"/>


    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/shape_corner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_100"
        android:layout_marginTop="@dimen/dimen_20"
        android:layout_marginStart="@dimen/dimen_30"
        android:layout_marginEnd="@dimen/dimen_30"
        android:padding="@dimen/dimen_16">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/input_key_hint"
            android:textSize="@dimen/font_3.5"
            android:textColor="@color/blueyGrey"
            app:met_hideUnderline="true"
            />

    </LinearLayout>

    <Button
        android:id="@+id/bt_start_input"
        style="@style/bt_long_in_linearLayout"
        android:text="@string/start_input"
        android:layout_marginStart="@dimen/dimen_46"
        android:layout_marginEnd="@dimen/dimen_46"
        android:layout_marginTop="@dimen/dimen_30"/>

</LinearLayout>