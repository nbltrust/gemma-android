<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#f9f9f9"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/btn_close"
        android:layout_width="60dp"
        android:layout_height="48dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_mask_close"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="24dp"
        android:textColor="@color/darkSlateBlue"
        android:lineSpacingExtra="2sp"
        android:text="@string/tip_status_un_init"
        />


    <Button
        android:id="@+id/btn_create_wallet"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_corner_button"
        android:text="@string/eos_btn_create_new_wallet"
        android:textColor="@color/white"
        android:textSize="@dimen/font_3.5"/>


    <Button
        android:id="@+id/btn_import_mne"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_shape_radius_white_with_border"
        android:text="@string/btn_import_mne"
        android:textColor="@color/color_fingger_anim"
        android:textSize="@dimen/font_3.5"/>


</LinearLayout>