<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:title="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteTwo"
    android:orientation="vertical">


        <ScrollView
            android:id="@+id/scroll_me"
            android:fillViewport="true"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="30dp"
                    android:id="@+id/iv_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_mask_close"/>

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="30dp"
                    android:text="设置"
                    android:textColor="@color/black_title"
                    android:textStyle="bold"
                    android:textSize="@dimen/font_7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:background="@color/whiteTwo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/dimen_10"
                    android:layout_marginStart="@dimen/dimen_10"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:orientation="vertical">

                    <com.allen.library.SuperTextView
                        title:sUseShape="true"
                        android:id="@+id/superTextView_general"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_48"
                        android:layout_marginEnd="@dimen/dimen_10"
                        android:layout_marginStart="@dimen/dimen_10"
                        android:layout_marginTop="@dimen/dimen_10"
                        title:sLeftTextColor="@color/black_title"
                        title:sLeftTextSize="@dimen/font_4"
                        title:sLeftTextString="@string/general"
                        title:sLeftIconRes="@drawable/ic_general"
                        title:sLeftIconHeight="@dimen/dimen_24"
                        title:sLeftIconWidth="@dimen/dimen_24"
                        title:sRightTvDrawableRight="@drawable/ic_arrow"
                        title:sLeftTextGravity="center"
                        title:sDividerLineType="none"
                        title:sShapeSelectorPressedColor="@color/item_pressed">

                    </com.allen.library.SuperTextView>

                    <View
                        android:background="@color/paleGrey"
                        android:layout_width="match_parent"
                        android:layout_marginStart="@dimen/dimen_50"
                        android:layout_marginEnd="@dimen/dimen_20"
                        android:layout_height="1dp"
                        android:layerType="software">
                    </View>

                    <com.allen.library.SuperTextView
                        title:sUseShape="true"
                        android:id="@+id/superTextView_security"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_48"
                        android:layout_marginEnd="@dimen/dimen_10"
                        android:layout_marginStart="@dimen/dimen_10"
                        android:layout_marginTop="@dimen/dimen_10"
                        title:sLeftTextColor="@color/black_title"
                        title:sLeftTextSize="@dimen/font_4"
                        title:sLeftTextString="@string/security"
                        title:sLeftIconRes="@drawable/ic_safe"
                        title:sLeftIconHeight="@dimen/dimen_24"
                        title:sLeftIconWidth="@dimen/dimen_24"
                        title:sRightTvDrawableRight="@drawable/ic_arrow"
                        title:sLeftTextGravity="center"
                        title:sDividerLineType="none"
                        title:sShapeSelectorPressedColor="@color/item_pressed">

                    </com.allen.library.SuperTextView>

                    <View
                        android:background="@color/paleGrey"
                        android:layout_width="match_parent"
                        android:layout_marginStart="@dimen/dimen_50"
                        android:layout_marginEnd="@dimen/dimen_20"
                        android:layout_height="1dp"
                        android:layerType="software">
                    </View>


                    <com.allen.library.SuperTextView
                        title:sUseShape="true"
                        title:sDividerLineType="none"
                        android:id="@+id/superTextView_help"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_48"
                        title:sLeftTextColor="@color/black_title"
                        title:sLeftTextSize="@dimen/font_4"
                        title:sLeftTextString="@string/help"
                        title:sLeftIconRes="@drawable/ic_help"
                        title:sLeftIconHeight="@dimen/dimen_24"
                        title:sLeftIconWidth="@dimen/dimen_24"
                        android:layout_marginEnd="@dimen/dimen_10"
                        android:layout_marginStart="@dimen/dimen_10"
                        android:layout_marginTop="@dimen/dimen_10"
                        title:sRightTvDrawableRight="@drawable/ic_arrow"
                        title:sLeftTextGravity="center"
                        title:sShapeSelectorPressedColor="@color/item_pressed">

                    </com.allen.library.SuperTextView>

                    <View
                        android:background="@color/paleGrey"
                        android:layout_width="match_parent"
                        android:layout_marginStart="@dimen/dimen_50"
                        android:layout_marginEnd="@dimen/dimen_20"
                        android:layout_height="1dp"
                        android:layerType="software">
                    </View>


                    <com.allen.library.SuperTextView
                        title:sUseShape="true"
                        android:id="@+id/superTextView_service_agreement"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_48"
                        android:layout_marginEnd="@dimen/dimen_10"
                        android:layout_marginStart="@dimen/dimen_10"
                        android:layout_marginTop="@dimen/dimen_10"
                        title:sLeftTextColor="@color/black_title"
                        title:sLeftTextSize="@dimen/font_4"
                        title:sLeftTextString="@string/terms_of_service"
                        title:sLeftIconRes="@drawable/ic_terms_of_service"
                        title:sLeftIconHeight="@dimen/dimen_24"
                        title:sLeftIconWidth="@dimen/dimen_24"
                        title:sDividerLineType="none"
                        title:sRightTvDrawableRight="@drawable/ic_arrow"
                        title:sLeftTextGravity="center"
                        title:sShapeSelectorPressedColor="@color/item_pressed">

                    </com.allen.library.SuperTextView>

                    <View
                        android:background="@color/paleGrey"
                        android:layout_width="match_parent"
                        android:layout_marginStart="@dimen/dimen_50"
                        android:layout_marginEnd="@dimen/dimen_20"
                        android:layout_height="1dp"
                        android:layerType="software">
                    </View>

                    <com.allen.library.SuperTextView
                        title:sUseShape="true"
                        title:sDividerLineType="none"
                        android:id="@+id/superTextView_about"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_48"
                        android:layout_marginEnd="@dimen/dimen_10"
                        android:layout_marginStart="@dimen/dimen_10"
                        android:layout_marginTop="@dimen/dimen_10"
                        title:sLeftTextColor="@color/black_title"
                        title:sLeftTextSize="@dimen/font_4"
                        title:sLeftTextString="@string/about_us"
                        title:sLeftTextGravity="center"
                        title:sLeftIconRes="@drawable/ic_about"
                        title:sLeftIconHeight="@dimen/dimen_24"
                        title:sLeftIconWidth="@dimen/dimen_24"
                        title:sRightTvDrawableRight="@drawable/ic_arrow"
                        title:sShapeSelectorPressedColor="@color/item_pressed">

                    </com.allen.library.SuperTextView>

                    <View
                        android:background="@color/paleGrey"
                        android:layout_width="match_parent"
                        android:layout_marginStart="@dimen/dimen_50"
                        android:layout_marginEnd="@dimen/dimen_20"
                        android:layout_height="1dp"
                        android:layerType="software">
                    </View>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

</LinearLayout>