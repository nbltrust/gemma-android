<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="@dimen/dimen_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_undelegate_cpu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/eos_CPU"
            android:textColor="@color/black_context"
            android:textSize="@dimen/font_3.5"
            />

        <TextView
            android:textColor="@color/black_context"
            android:id="@+id/tv_balance_cpu_undelegate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="0.1 EOS 可用"/>

    </LinearLayout>


    <EditText
        android:id="@+id/edt_undelegate_cpu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50"
        android:hint="@string/eos_amount_undelegate"
        android:inputType="numberDecimal"
        android:paddingStart="0dp"
        android:background="@null"
        android:textColor="@color/black_title"
        android:textColorHint="@color/very_light_pink"
        android:textCursorDrawable="@drawable/eos_cursor_custom"
        android:textSize="@dimen/font_4"/>

    <View
        style="@style/common_divider"/>

    <LinearLayout
        android:layout_marginTop="@dimen/dimen_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_weight="1"
            android:id="@+id/tv_undelegate_net"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/eos_NET"
            android:textColor="@color/black_context"
            android:textSize="@dimen/font_3.5"/>


        <TextView
            android:textColor="@color/black_context"
            android:id="@+id/tv_balance_net_undelegate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="0.1 EOS 可用"/>

    </LinearLayout>


    <EditText
        android:id="@+id/edt_undelegate_net"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50"
        android:background="@null"
        android:inputType="numberDecimal"
        android:hint="@string/eos_amount_undelegate"
        android:textColor="@color/black_title"
        android:textColorHint="@color/very_light_pink"
        android:textCursorDrawable="@drawable/eos_cursor_custom"
        android:textSize="@dimen/font_4"/>

    <View
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        style="@style/common_divider"/>

</LinearLayout>