<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#f9f9f9"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/btn_close"
        android:layout_width="60dp"
        android:layout_height="48dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_mask_close"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="24dp"
        android:textColor="@color/darkSlateBlue"
        android:lineSpacingExtra="2sp"
        android:text="@string/refund_detail"
        />

    <LinearLayout
        android:background="@drawable/bg_shape_radius_white"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:text="@string/refund_username"
                android:textColor="@color/font_title"
                android:textSize="14sp"/>


            <TextView
                android:id="@+id/tv_undelegate_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:textColor="@color/darkSlateBlue"
                android:textSize="16sp"
                tools:text="0.0001 EOS"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/horiontal_line"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:text="@string/fund"
                android:textColor="@color/font_title"
                android:textSize="14sp"/>


            <TextView
                android:id="@+id/tv_undelegate_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:textSize="@dimen/font_4"
                android:textColor="@color/darkSlateBlue"
                tools:text="2.2345 EOS"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/horiontal_line"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_refund_account_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:text="@string/memo"
                android:textColor="@color/font_title"
                android:textSize="14sp"/>


            <TextView
                android:id="@+id/tv_undelegate_memo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:layout_marginStart="@dimen/dimen_20"
                android:textSize="@dimen/font_4"
                android:textAlignment="viewEnd"
                android:maxLines="3"
                android:ellipsize="end"
                android:textColor="@color/darkSlateBlue"
                tools:text="\ufeff@gemma12345"/>

        </RelativeLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_confirm_refund"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/selector_btn_transfer"
        android:text="@string/confirm_refund"
        android:textColor="@color/white"
        android:textSize="16sp"/>

</LinearLayout>