<android.support.constraint.ConstraintLayout
    xmlns:title="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    title:layout_constraintTop_toBottomOf="@id/tv_assets"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginTop="10dp"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:id="@+id/view_resource_manage"
    android:layout_width="match_parent"
    android:layout_height="48dp">

    <ImageView
        title:layout_constraintTop_toTopOf="parent"
        title:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/iv_token_asset_logo"
        tools:src="@drawable/eos_ic_asset"
        android:layout_marginTop="2dp"
        android:layout_width="24dp"
        android:layout_height="24dp"/>

    <TextView
        android:layout_marginStart="10dp"
        android:id="@+id/tv_token_name"
        android:textStyle="bold"
        android:textSize="@dimen/font_4"
        android:textColor="@color/black_title"
        title:layout_constraintTop_toTopOf="parent"
        title:layout_constraintBottom_toBottomOf="parent"
        title:layout_constraintStart_toEndOf="@id/iv_token_asset_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EOS"/>

    <LinearLayout
        title:layout_constraintEnd_toEndOf="parent"
        title:layout_constraintTop_toTopOf="parent"
        title:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_token_quantity"
            android:text="-----"
            android:textStyle="bold"
            android:textAlignment="viewEnd"
            android:textSize="@dimen/font_4"
            android:textColor="@color/black_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_eos_value"
            title:layout_constraintTop_toBottomOf="@id/tv_token_quantity"
            android:layout_width="wrap_content"
            android:textColor="@color/black_context"
            android:textSize="@dimen/font_3.5"
            android:layout_height="wrap_content"
            android:text="â‰ˆ ----"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>