<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/ui_navibar">

    </include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.cybex.base.view.statusview.MultipleStatusView
            android:id="@+id/list_multiple_status_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/btn_navibar"
            android:layout_above="@+id/view_vote_bot"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="4dp"
            app:contentView="@layout/content_recycler_view"
            app:emptyView="@layout/empty_view_nodes"
            app:errorView="@layout/error_view"
            app:loadingView="@layout/loading_view"
            app:noNetworkView="@layout/no_network_view"
            >
        </com.cybex.base.view.statusview.MultipleStatusView>


        <RelativeLayout
            android:id="@+id/view_vote_bot"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:background="#1927347d">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="@string/delegate_res"
                    android:textColor="#212c67"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tv_resource"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="4dp"
                    android:text="@string/zero_balance"
                    android:textColor="#212c67"
                    android:textSize="14sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="44dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_vote_number"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/btn_vote_left_light"
                    android:text="@string/vote_num_init"
                    android:textColor="#ffffff"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tv_exec_vote"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/btn_vote_right_light"
                    android:text="@string/title_vote"
                    android:textColor="#ffffff"
                    android:textSize="14sp"/>

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>