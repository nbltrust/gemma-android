<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:title="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/shape_corner_dialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:src="@drawable/ic_success"
        android:id="@+id/iv_password_hint"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="28dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/format_success"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:textSize="@dimen/font_4"
        android:layout_marginTop="6dp"/>

    <TextView
        android:id="@+id/tv_tip_init"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tip_to_init"
        android:layout_gravity="center"
        android:textSize="@dimen/font_4"
        android:textColor="@color/blueyGrey"
        android:layout_marginTop="@dimen/dimen_10"
        android:layout_marginStart="@dimen/dimen_66"
        android:layout_marginEnd="@dimen/dimen_66"
        />

    <View
        android:background="@color/blueyGrey"
        android:layerType="software"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dimen_20"
        android:layout_height="1dp">

    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/cancel_cn"
            android:gravity="center"
            android:textSize="17sp"
            android:layout_weight="1"
            android:textColor="@color/cornflowerBlue"
            android:background="@drawable/shape_corner_left_bot"
            />

        <TextView
            android:id="@+id/tv_init"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/initialize"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="17sp"
            android:textColor="@color/whiteTwo"
            android:background="@drawable/shape_corner_right_bot"
            />

    </LinearLayout>

</LinearLayout>