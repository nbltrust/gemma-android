<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 不可用时 -->
    <item android:drawable="@drawable/bg_shape_btn_disabled" android:state_enabled="false"/>

    <item android:drawable="@drawable/bg_shape_btn_enabled" android:state_enabled="true"/>
    <!-- 被选中时 -->
    <item android:drawable="@drawable/bg_shape_btn_enabled" android:state_selected="true"/>
    <item android:drawable="@drawable/bg_shape_btn_pressed" android:state_pressed="true" />
    <!-- 默认时 -->
    <item android:drawable="@drawable/bg_shape_btn_disabled"/>
</selector>