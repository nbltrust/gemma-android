    <!-- 公用删除icon样式-->
    <style name="clear_icon_common">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/ic_close</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_marginEnd">@dimen/dimen_10</item>
    </style>

    <!-- 公用明文密文icon样式-->
    <style name="mask_icon_common">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/ic_visible</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:visibility">visible</item>
        <item name="android:layout_marginEnd">@dimen/dimen_15</item>
    </style>

    <style name="input_style">
        <item name="android:textStyle">bold</item>
    </style>


    <!-- Radio Button 样式-->
    <style name="mRadioButton">
        <item name="android:layout_marginStart">@dimen/dimen_10</item>
        <item name="android:layout_marginEnd">@dimen/dimen_10</item>
        <item name="android:layout_height">@dimen/card_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/font_3.5</item>
        <item name="android:textColor">@color/darkSlateBlue</item>
        <item name="android:button">@null</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:drawableRight">@drawable/selector_radio_button</item>
    </style>

    <!-- 通用EditText样式 -->
    <style name="myEditText">
        <item name="android:colorControlNormal">@color/black_context</item>
        <item name="android:colorControlActivated">@color/black_content</item>
    </style>

    <!-- checkbox样式 -->
    <style name="myCheckBox" parent="@android:style/Widget.Material.CompoundButton.CheckBox">
        <item name="android:colorControlActivated">@color/black_content</item>
        <item name="android:colorControlNormal">@color/checkbox_normal</item>
    </style>

    <!-- 通用switch样式 -->
    <style name="mySwitch">
        <item name="android:thumb">@drawable/selector_switch_thumb</item>
        <item name="android:track">@drawable/selector_switch_track</item>
    </style>

    <style name="mySwitchButton">
        <item name="android:layout_width">@dimen/dimen_48</item>
        <item name="android:layout_height">@dimen/dimen_26</item>
        <item name="android:layout_marginEnd">@dimen/dimen_10</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <!-- 线性布局中长按钮的样式 -->
    <style name="bt_long_in_linearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/bt_common_height</item>
        <item name="android:textSize">@dimen/font_4</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/shape_corner_button</item>
    </style>

    <!-- 约束布局中长按钮的样式 -->
    <style name="bt_create_wallet">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/bt_inInitPage_height</item>
        <item name="android:layout_marginStart">@dimen/bt_inInitPage_margin</item>
        <item name="android:layout_marginEnd">@dimen/bt_inInitPage_margin</item>
    </style>


    <!-- Alert 字体样式 -->

    <style name="myAlert">
        <item name="android:textSize">@dimen/font_3</item>
        <item name="android:textColor">@color/whiteTwo</item>
    </style>

    <style name="dialogstyle">
        <!--设置dialog的背景-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--设置Dialog的windowFrame框为无-->
        <item name="android:windowFrame">@null</item>
        <!--设置无标题-->
        <item name="android:windowNoTitle">true</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--是否半透明-->
        <item name="android:windowIsTranslucent">true</item>
        <!--设置窗口内容不覆盖-->
        <item name="android:windowContentOverlay">@null</item>
        <!--设置动画，在这里使用让它继承系统的Animation.Dialog-->
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <!--背景是否模糊显示-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="Theme.ActivityDialogStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/bg_ui</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowIsFloating">true</item>
        //dialog会自适应
        <item name="android:windowFullscreen">true</item>

    </style>

    <!-- 公共button不可点击样式 -->
    <style name="common_button_unClickable">
