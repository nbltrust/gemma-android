<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="53.8dp"
    >

    <TextView
        android:id="@+id/tv_left_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="zuobian"
        android:textColor="@color/black_content"
        android:textSize="@dimen/font_4"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/tv_right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="middle"
        android:gravity="end"
        android:layout_toRightOf="@+id/tv_left_title"
        android:layout_marginLeft="20dp"
        android:layout_toLeftOf="@+id/iv_right"
        android:layout_marginRight="7dp"
        tools:text="youbian"
        android:textColor="@color/grey_content"
        android:textSize="@dimen/font_4"
        android:layout_centerVertical="true"/>


    <ImageView
        android:id="@+id/iv_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="11.4dp"
        android:src="@drawable/ic_tab_arrow"
        android:layout_centerVertical="true"/>

    <View
        android:layout_alignParentBottom="true"
        style="@style/common_divider_nopadding"
    />
</RelativeLayout>

