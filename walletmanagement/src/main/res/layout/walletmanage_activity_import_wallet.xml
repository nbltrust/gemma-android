<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/ui_navibar">

    </include>

    <com.cybex.base.view.refresh.CommonRefreshLayout
        android:id="@+id/view_refresh_import"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.cybex.base.view.tablayout.SlidingTabLayout
                android:id="@+id/view_sliding_tab"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="53.8dp"
                android:layout_marginLeft="@dimen/common_page_content_padding"
                android:layout_marginRight="@dimen/common_page_content_padding"
                android:background="@color/colorTabBackground"
                app:tl_indicator_color="@color/black_content"
                app:tl_indicator_gravity="BOTTOM"
                app:tl_indicator_height="1.1dp"
                app:tl_indicator_style="NORMAL"
                app:tl_indicator_width="160dp"
                app:tl_indicator_width_equal_title="false"
                app:tl_tab_padding="0dp"
                app:tl_tab_space_equal="true"
                app:tl_textBold="BOTH"
                app:tl_textSelectColor="@color/black_content"
                app:tl_textUnselectColor="@color/black_grey"
                app:tl_textsize="@dimen/font_4.5"
                app:tl_underline_color="@color/black_content"/>

            <View
                style="@style/common_divider"
                android:layout_height="0.5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                />


            <android.support.v4.view.ViewPager
                android:id="@+id/vp_content"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>


        </LinearLayout>


    </com.cybex.base.view.refresh.CommonRefreshLayout>


</LinearLayout>