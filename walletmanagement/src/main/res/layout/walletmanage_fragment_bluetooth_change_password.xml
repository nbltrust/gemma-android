<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteTwo"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <include
        layout="@layout/ui_navibar">
    </include>

    <ScrollView
        android:id="@+id/scroll_change_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:background="@drawable/shape_corner"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_14"
                android:paddingTop="@dimen/dimen_10"
                android:paddingBottom="@dimen/dimen_10"
                >

                <TextView
                    android:id="@+id/tv_set_new_pass"
                    style="@style/walletmanage_text_title_config_wallet"
                    android:text="@string/walletmanage_new_password"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/edt_set_new_pass"
                        style="@style/walletmanage_editText_config_wallet"
                        android:inputType="textPassword"
                        android:layout_weight="1"
                        android:hint="@string/walletmanage_tip_input_password"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_set_newPass_clear"
                            style="@style/clear_icon_common"/>

                        <ImageView
                            android:id="@+id/iv_set_newPass_mask"
                            style="@style/mask_icon_common"/>

                    </LinearLayout>


                </LinearLayout>


                <View
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:id="@+id/view_set_new_pass"
                    style="@style/common_divider">
                </View>

                <TextView
                    android:id="@+id/tv_repeat_new_pass"
                    style="@style/walletmanage_text_title_config_wallet"
                    android:text="@string/walletmanage_tip_repeat_pass"
                    android:layout_marginTop="@dimen/dimen_10"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/edt_repeat_new_pass"
                        style="@style/walletmanage_editText_config_wallet"
                        android:layout_weight="1"
                        android:inputType="textPassword"
                        android:hint="@string/walletmanage_tip_repeat_password"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_repeat_newPass_clear"
                            style="@style/clear_icon_common"/>

                        <ImageView
                            android:id="@+id/iv_repeat_newPass_mask"
                            style="@style/mask_icon_common"/>

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:id="@+id/view_repeat_new_pass"
                    style="@style/common_divider">
                </View>

                <TextView
                    android:id="@+id/tv_new_pass_hint"
                    style="@style/walletmanage_text_title_config_wallet"
                    android:text="@string/walletmanage_title_password_hint"
                    android:layout_marginTop="@dimen/dimen_10"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/edt_new_pass_hint"
                        style="@style/walletmanage_editText_config_wallet"
                        android:layout_weight="1"
                        android:hint="@string/walletmanage_tip_input_password_hint"
                        android:layout_marginStart="@dimen/dimen_20"
                        android:background="@null"/>

                    <ImageView
                        android:id="@+id/iv_newPass_hint_clear"
                        style="@style/clear_icon_common"/>

                </LinearLayout>

                <View
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    style="@style/common_divider">
                </View>


            </LinearLayout>

            <Button
                android:id="@+id/btn_confirm_change_pass"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bt_inInitPage_height"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="32dp"
                android:text="@string/walletmanage_btn_confirm_change"
                android:background="@drawable/shape_corner_button_unclickable"
                android:textColor="@color/whiteTwo"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_3">
            </View>

        </LinearLayout>

    </ScrollView>

</LinearLayout>