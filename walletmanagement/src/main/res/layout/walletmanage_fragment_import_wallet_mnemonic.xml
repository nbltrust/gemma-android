<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteTwo"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--<include-->
        <!--layout="@layout/ui_navibar">-->
    <!--</include>-->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/walletmanage_tip_input_mnemonic"
        android:textColor="@color/black_title"
        android:textSize="@dimen/font_4"
        android:layout_marginStart="@dimen/dimen_46"
        android:layout_marginEnd="@dimen/dimen_46"
        android:layout_marginTop="@dimen/dimen_20"/>


    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/shape_corner_with_stroke"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_100"
        android:layout_marginTop="@dimen/dimen_20"
        android:layout_marginStart="@dimen/dimen_30"
        android:layout_marginEnd="@dimen/dimen_30"
        android:padding="@dimen/dimen_16">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edt_show_mnemonic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/walletmanage_input_mnemonic_hint"
            android:textSize="@dimen/font_4"
            android:textColor="@color/black_context"
            android:textColorHint="@color/black_context"
            app:met_hideUnderline="true"
            android:textCursorDrawable="@drawable/walletmanage_cursor_custom"
            />

    </LinearLayout>

    <Button
        android:id="@+id/bt_next_step"
        style="@style/bt_long_in_linearLayout"
        android:text="@string/walletmanage_tip_next_step"
        android:layout_marginStart="@dimen/dimen_46"
        android:layout_marginEnd="@dimen/dimen_46"
        android:layout_marginTop="@dimen/dimen_30"/>

</LinearLayout>