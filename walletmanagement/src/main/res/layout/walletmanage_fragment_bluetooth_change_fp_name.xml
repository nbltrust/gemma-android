<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            layout="@layout/ui_navibar">

        </include>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="@dimen/dimen_20"
            android:layout_marginStart="@dimen/dimen_20"
            android:layout_marginEnd="@dimen/dimen_20"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_navibar"

            >

            <EditText
                android:id="@+id/editText_setFPName"
                android:hint="@string/walletmanage_change_fp_name_hint"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:paddingStart="@dimen/dimen_10"
                android:textSize="@dimen/font_3.5"
                android:textCursorDrawable="@drawable/cursor_custom"
                android:background="@null"
                android:textColor="@color/darkSlateBlue"
                android:textColorHint="@color/very_light_pink"/>

            <ImageView
                android:id="@+id/clear_fp_name"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginEnd="10dp"
                android:background="@drawable/ic_close"/>

        </LinearLayout>

        <View
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            style="@style/common_divider">

        </View>

    </LinearLayout>



</android.support.constraint.ConstraintLayout>